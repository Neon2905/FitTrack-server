# Use official PHP image with Apache
FROM php:8.2-apache

# Enable Apache rewrite module if needed
RUN a2enmod rewrite

# Copy your entire project into the container
COPY . /var/www/html/

# Set working directory to the project root (where composer.json is)
WORKDIR /var/www/html

# Install system dependencies and composer, then install PHP dependencies
RUN apt-get update && apt-get install -y unzip git curl ca-certificates && \
    curl -sS https://getcomposer.org/installer -o composer-setup.php && \
    php composer-setup.php --install-dir=/usr/local/bin --filename=composer && \
    composer install --no-dev --optimize-autoloader && \
    rm composer-setup.php && apt-get clean && rm -rf /var/lib/apt/lists/*

# Set Apache document root to /var/www/html/public
WORKDIR /var/www/html/public

# Copy Apache config
COPY apache.conf /etc/apache2/sites-available/000-default.conf

# Expose port 80 for Apache
EXPOSE 80

# Start Apache in the foreground
CMD ["apache2-foreground"]
