# Use official PHP image with Apache
FROM php:8.2-apache

# Enable Apache rewrite module (if you need it)
RUN a2enmod rewrite

# Copy your app code into the container
COPY . /var/www/html/

# Set working directory to your actual public directory
WORKDIR /var/www/html/FitTrack/public

# Copy composer files first for caching
COPY composer.json composer.lock /var/www/html/

# Install dependencies and Composer
RUN apt-get update && apt-get install -y unzip git curl ca-certificates && \
    curl -sS https://getcomposer.org/installer -o composer-setup.php && \
    php composer-setup.php --install-dir=/usr/local/bin --filename=composer && \
    composer install --no-dev --optimize-autoloader && \
    rm composer-setup.php && apt-get clean && rm -rf /var/lib/apt/lists/*

# Expose port 80 (Apache)
EXPOSE 80

# Start Apache in the foreground
CMD ["apache2-foreground"]
